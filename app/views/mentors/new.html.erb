<%= render "shared/second.header" %>

<div class="mentors-sell-contents">
  <header class="mentors-sell-header">

  </header>
  <div class="mentors-sell-main">
   <h1 class="welcome-helpwe">メンター登録</h1>
    <h2 class="mentors-sell-title">~あなたの素敵なプロフィールを入力~</h2>
    <%= form_with model: @mentor, local: true do |f| %>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示%>
    <%# <%= render 'shared/error_messages', model: f.object %> 
    <%# //インスタンスを渡して、エラー発生時にメッセージが表示 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) helpwe太郎" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

    <%# アイコン %>
    <div class="img-upload">
      <div class="weight-bold-text">
        プロフィール画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"mentor-image" %>
      </div>
    </div>
    <%# /アイコン %>
    <%# メンター名とメンター説明 %>
    <div class="new-mentors">
      <div class="weight-bold-text">
        一言経歴
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :career, class:"mentors-text", id:"mentor-name", placeholder:"例)某大手IT企業現役サーバーサイドエンジニア", maxlength:"40" %>
      <div class="mentors-explain">
        <div class="weight-bold-text">
          プロフィール
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :profile, class:"items-text", id:"item-info", placeholder:"あなたの説明（必須 1,000文字まで）例）2010年から大手IT企業でRuby,PHP,SQLを使用してサーバーサイドエンジニアとして勤めています。メンター歴5年。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /メンター名とメンター説明 %>

    <%# 商品の詳細 %>
    <div class="mentors-detail">
      <div class="form">
        
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# スキル %>
    <div class="mentors-detail">
      <div class="weight-bold-text question-text">
        <div class="form">
          <div class="weight-bold-text">
            スキル
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:skill_id, Skill.all, :id, :name, {}, {class:"select-box", id:"mentor-skill"}) %>
          
        </div>
      </div>
    </div>
   <%# スキル %>
   
    
    <div class="sell-btn-contents">
      <%= f.submit "メンターとして登録する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
</div>
  <% end %>





<%= render "shared/footer" %>
 