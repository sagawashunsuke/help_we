<header class="top-page-header">
  <%# <script src="_header.js"></script> %>
    <div class="main-header">
      <div class="main-logo">
          <%= link_to image_tag("help_we.png", class:"helpwe-icon"), "" %>
      </div>
      <div class='nav'>
        <ul class='right-lists'>
            <li><%= link_to 'メンター', "#mentor", class: "mentor-list" %></li>
            <li><%= link_to 'チケット', "#mentor-ticket", class: "ticket-list" %></li>
        </ul>
      </div>

      <% if user_signed_in? %>
        <div class='left-lists-ok'>
          <%= link_to current_user.name, "#", class: "sign-up" %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
        </div>
      <% else %>

        <div class='left-lists'>
            <%= link_to 'ログイン',  new_user_session_path, class: "login" %>
            <%= link_to '新規登録', new_user_registration_path,  class: "sign-up" %>
        </div>
      <% end %>
        
          <div class="cupon-present" id="presents">
            <a href="/users/sign_up">今なら無料登録で<br>「メンターチケット１枚」プレゼント！</a>
          </div>
    </div>
</header>


